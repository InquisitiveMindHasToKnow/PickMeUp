<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".fragments.SetUpNotificationFragment">


    <TextView
        android:id="@+id/set_up_notification_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/textColor"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Set Up Notification Time" />



    <TextView
        android:id="@+id/set_up_notification_time_textview"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:textSize="32dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/textColor"
        android:background="@drawable/circle"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/set_up_notification_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="12:00 AM" />

</android.support.constraint.ConstraintLayout>